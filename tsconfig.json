{
  "include": ["src/**/*"],
  "compilerOptions": {
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "target": "es6",
    "lib": ["ES2015", "DOM", "ES2016", "DOM.Iterable"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}